<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:id="@+id/cardView"
    android:layout_margin="@dimen/dimen_10"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_grad"
        android:layout_height="250dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="70dp"
               android:layout_centerInParent="true"
               android:background="@drawable/login_copy"
               android:layout_height="70dp"/>

       </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/giftCard"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Gift Card"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="5 Shirts"
                    android:id="@+id/txtUnits"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="30dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="300dp"
                android:src="@drawable/gift_strip"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
            <LinearLayout
            android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="10"
                android:layout_below="@id/giftCard"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Gift Card Number"
                android:fontFamily="@font/roboto_bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="abcx-asdk-kjka-jhda"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="-5dp"
                    android:textSize="18sp"
                    android:id="@+id/txtCardNo"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="$200"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto_bold"
                    android:textAllCaps="true"
                    android:id="@+id/txtAmount"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
            <Button
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/btnRedeem"
                android:text="ï«"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/fontawesome"
                android:layout_margin="20dp"
                android:layout_height="50dp"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>