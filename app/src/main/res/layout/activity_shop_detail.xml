<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".view.module.shops.ShopDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="18dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_arrow"
            android:id="@+id/backBtn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shops"
            android:id="@+id/titleTag"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_below="@id/toolbar"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="match_parent"
               android:src="@drawable/shop_banner"
               android:id="@+id/banner"
               android:scaleType="fitXY"
               android:adjustViewBounds="true"
               android:layout_height="240dp"/>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@color/colorWhite"
               android:id="@+id/layout_card"
               android:layout_marginLeft="@dimen/dimen_20"
               android:layout_marginTop="-40dp"
               app:cardBackgroundColor="@color/colorWhite"
               app:cardCornerRadius="5dp"
               app:cardElevation="1dp"
               android:layout_below="@id/banner"
               android:layout_marginRight="@dimen/dimen_20"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:padding="5dp"
                       android:layout_marginTop="5dp"
                       android:weightSum="12"
                       android:layout_height="wrap_content">
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_weight="2.4"
                           android:layout_gravity="center_vertical"
                           android:layout_margin="5dp"
                           app:cardCornerRadius="5dp"
                           android:layout_height="match_parent">
                           <ImageView
                               android:layout_width="match_parent"
                               android:src="@drawable/shop_banner"
                               android:scaleType="fitXY"
                               android:id="@+id/img"
                               android:adjustViewBounds="true"
                               android:layout_height="match_parent"/>

                       </androidx.cardview.widget.CardView>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="9.2"
                           android:orientation="vertical"
                           android:layout_margin="5dp"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:text="Shop Name"
                               android:textSize="20sp"
                               android:id="@+id/txtTitle"
                               android:layout_marginBottom="5dp"
                               android:textColor="@color/colorPrimary"
                               android:layout_height="wrap_content"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_marginBottom="5dp"
                               android:id="@+id/txtDesc"
                               android:textColor="@color/colorBlack"
                               android:text="@string/this_is_amazing_contrary_to_popular_belief_amazing_contrary_to_popular_belief"
                               android:layout_height="wrap_content"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:weightSum="2"
                       android:layout_margin="10dp"
                       android:orientation="horizontal"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:orientation="horizontal"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:text=""
                               android:textSize="18sp"
                               android:textColor="@color/colorBlack"
                               android:fontFamily="@font/fontawesome"
                               android:layout_height="wrap_content"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:textColor="@color/colorBlack"
                               android:layout_marginLeft="@dimen/dimen_10"
                               android:text="9854 5456 888"
                               android:id="@+id/txtPhone"
                               android:layout_height="wrap_content"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginLeft="@dimen/dimen_10"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:text=""
                               android:textSize="18sp"
                               android:textColor="@color/colorBlack"
                               android:fontFamily="@font/fontawesome"
                               android:layout_height="wrap_content"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:textColor="@color/colorBlack"
                               android:layout_marginLeft="@dimen/dimen_10"
                               android:id="@+id/txtEmail"
                               android:text="john doe@gmail.com"
                               android:layout_height="wrap_content"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_margin="10dp"
                       android:orientation="horizontal"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:text=""
                           android:textSize="18sp"
                           android:textColor="@color/colorBlack"
                           android:fontFamily="@font/fontawesome"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_gravity="center_vertical"
                           android:textColor="@color/colorBlack"
                           android:layout_marginLeft="@dimen/dimen_10"
                           android:id="@+id/txtAddress"
                           android:text="4438  Spring Avenue, Newtown, PA, Calefornia"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:text=""
                           android:layout_marginLeft="@dimen/dimen_10"
                           android:textSize="18sp"
                           android:textColor="@color/colorPrimary"
                           android:fontFamily="@font/fontawesome"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_below="@id/layout_card"
               android:id="@+id/layout_offers"
               android:orientation="vertical"
               android:layout_margin="@dimen/dimen_10"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="Offers"
                   android:textColor="@color/colorBlack"
                   android:textSize="20sp"
                   android:layout_marginBottom="@dimen/dimen_10"
                   android:layout_height="wrap_content"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:id="@+id/offers"
                   tools:listitem="@layout/item_offers"
                   android:layout_height="wrap_content">

               </androidx.recyclerview.widget.RecyclerView>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_below="@id/layout_offers"
               android:orientation="vertical"
               android:id="@+id/layout_gifts"
               android:layout_margin="@dimen/dimen_10"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="Gift Cards"
                   android:textColor="@color/colorBlack"
                   android:textSize="20sp"
                   android:layout_marginBottom="@dimen/dimen_10"
                   android:layout_height="wrap_content"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </androidx.recyclerview.widget.RecyclerView>
           </LinearLayout>
       </RelativeLayout>
   </androidx.core.widget.NestedScrollView>

</RelativeLayout>